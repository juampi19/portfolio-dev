---
interface Props {
  title: string
  date: string
  description: string
  company: string
}
const { date, title, description, company } = Astro.props
---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
<div class="relative pb-12 md:col-span-2">
  <div class="sticky top-0">
    <h3 class="text-xl font-bold text-red-200">{title}</h3>
    <h4 class="font-semibold text-xl text-gray-600 dark:text-white">{company}</h4>
    <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">{date}</time>
  </div>
</div>
      <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400 text-pretty">{ description }</p>
</div>